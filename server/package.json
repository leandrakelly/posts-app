  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prisma": "^4.14.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.14.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^16.6.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "jsonwebtoken": "^9.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "node ./dist/index.ts",
    "dev": "nodemon ./src/index.ts",
    "docker:start-db": "docker-compose up -d db",
    "docker:start-testdb": "docker-compose up -d testdb",
    "docker:stop-db": "docker-compose stop db",
    "docker:stop-testdb": "docker-compose stop testdb",
    "test": "yarn docker:start-testdb && dotenv -e .env.test yarn prisma:migrate && jest --watchAll --no-cache",
    "test:ci": "yarn docker:start-testdb && yarn prisma:migrate && jest --no-cache",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint . --ext .jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .jsx,.ts,.tsx --fix",
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate-deploy": "prisma migrate deploy"
  }
}
